@model IEnumerable<Student>
@{
    ViewData["Course"] = "Course List Page";
}

<h1>Students Page</h1>
<hr>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>RoomNo</th>
            <th>Courses</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a asp-controller="Classroom" asp-action="Students" asp-route-id="@item.ClassroomId">@item.Classroom.RoomNo</a></td>
                <td><a asp-controller="Student" asp-action="Courses" asp-route-id="@item.Id">Courses</a></td>
                <td><a asp-controller="Course" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                <td><a asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
